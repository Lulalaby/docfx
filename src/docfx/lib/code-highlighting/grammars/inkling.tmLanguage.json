{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Inkling",
    "patterns": [
        {
            "name": "comment.line.number-sign.inkling",
            "match": "#.*"
        },
        {
            "name": "keyword.control.inkling",
            "match": "\\b(action|algorithm|and|avoid|concept|const|constraint|curriculum|data|dataset|drive|else|experiment|extends|function|goal|graph|hybrid|if|import|in|inkling|input|lesson|mask|maximize|minimize|not|or|output|package|programmed|reach|return|reward|scenario|select|simulator|source|state|step|table|terminal|training|type|using|var|weight|within)\\b"
        },
        {
            "name": "storage.type",
            "match": "\\b(number|string)\\b"
        },
        {
            "name": "constant.language",
            "match": "\\b(false|true)\\b"
        },
        {
            "name": "constant.numeric",
            "match": "[\\+\\-]?[0-9]+(\\.[0-9]*)?([ef][\\+\\-]?[0-9]+)?"
        },
        {
            "name": "entity.name",
            "match": "[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
            "name": "entity.name",
            "begin": "`",
            "end": "`",
            "patterns": [
                {
                    "name": "constant.character.escape",
                    "match": "\\`"
                }
            ]
        },
        {
            "name": "string.quoted.double",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape",
                    "match": "\\\\."
                }
            ]
        }
    ],
    "scopeName": "source.ink"
}
